<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Layout containing buttons (will be hidden until login) -->
    <LinearLayout
        android:id="@+id/buttonsLayout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Hàng 1 - View Cases và View Deaths -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <Button
                android:id="@+id/btnCases"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="View Cases"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnDeaths"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="View Deaths"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Hàng 2 - View Summary và View Prevention Tips -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <Button
                android:id="@+id/btnSummary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="View Summary"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnPrevention"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="View Prevention Tips"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Hàng 3 - View Symptoms và View Testing Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <Button
                android:id="@+id/btnSymptoms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="View Symptoms"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnTestingInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="View Testing Info"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Hàng 4 - User Report -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <Button
                android:id="@+id/btnUserReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Report"
                android:layout_marginEnd="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Fragment container -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:background="@android:color/white" />
</LinearLayout> 